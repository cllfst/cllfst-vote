<!DOCTYPE html>
<html>

<head>
  <title> Home </title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <link rel='stylesheet' href="/stylesheets/index.css" />
</head>

<body>

  <div class="bgimg w3-display-container w3-animate-opacity w3-text-white">

    <!-- logo -->
    <div>
      <img class="w3-display-topleft w3-image w3-padding-large w3-margin logo" src="/images/logo.png" alt="Logo">
    </div>

    <!-- message -->
    <div class="w3-display-middle">
      <h1 class="w3-jumbo w3-animate-top"> Please check you email inbox!</h1>
      <hr class="w3-border-grey" style="margin:auto;width:40%">
      <p class="w3-large w3-center">You need an access link to be able to vote.</p>
    </div>
    <br>

    <!-- open ballots -->
    <div class="w3-display-bottomright w3-padding-large">
      <h1 class="w3-center">Currently open ballots</h1>
      <ul class="w3-ul w3-card-4">
        <% if (openBallots.length === 0) { %> 
          <li class="w3-bar w3-white w3-margin">
            <div class="w3-bar-item">
              <h4 class="w3-large w3-white"> Nothing for now </h4>
            </div>
          </li>
        <% } %> 
        <% for (const item of openBallots) { %>
          <li onclick="location.href='/results/<%= item.ballotName %>';" class="w3-bar w3-white w3-margin">
            <div class="w3-bar-item">
              <h4 class="w3-large w3-white"> <%= item.ballotName.charAt(0).toUpperCase() + item.ballotName.slice(1) %> </h4>
              <p class="custom-blue">Started on:<span class="date"> <%= item.startDate %> </span> </p>
              <p class="custom-blue">Ends on: <span class="date"> <%= item.endDate %> </span> </p>
            </div>
          </li>
        <% } %>
      </ul>
    </div>

    <!-- recent ballots -->
    <div class="w3-display-bottomleft w3-padding-large">
      <h1 class="w3-center">Recently closed ballots</h1>
      <ul class="w3-ul w3-card-4">
        <% if (recentlyClosedBallots.length === 0) { %> 
          <li class="w3-bar w3-white w3-margin">
            <div class="w3-bar-item">
              <h4 class="w3-large w3-white"> Nothing for now </h4>
            </div>
          </li>
        <% } %> 
        <% for (const item of recentlyClosedBallots) { %>
          <li onclick="location.href='/results/<%= item.ballotName %>';" class="w3-bar w3-white w3-margin">
            <div class="w3-bar-item">
              <h4 class="w3-large w3-white"> <%= item.ballotName.charAt(0).toUpperCase() + item.ballotName.slice(1) %> </h4>
              <p class="custom-blue">Started on:<span class="date"> <%= item.startDate %> </span> </p>
              <p class="custom-blue">Ended on: <span class="date"> <%= item.endDate %> </span> </p>
            </div>
          </li>
        <% } %>
      </ul>
    </div>
  </div>

  <script>
    var dates = document.getElementsByClassName('date')
    for (const item of dates) {
      item.innerText = new Date(item.textContent)
    }
  </script>

</body>

</html>
