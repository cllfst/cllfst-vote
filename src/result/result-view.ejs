<!DOCTYPE html>
<html>

<head>
  <title> Ballot's result </title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" type="text/css" href="/css/result.css">
</head>

<body>

  <!-- background image -->
  <div class="bgimg w3-display-container">
    
    <%- include ../misc/logo.ejs %>
    <%- include ../misc/home-icon.ejs %>

    <h1 class="w3-display-topleft"><b style="color: white;">Final results!</b></h1>

    <img class="happy-tux" src="/assets/images/happy-tux.gif" alt="Happy tux gif">

    <div class="container">
      <ul class="responsive-table">
        <li class="table-header">
          <div class="col-1">Role</div>
          <div class="col-2">Candidate</div>
          <div class="col-3">Votes</div>
        </li>

        <% for (const role of roles) { %>
        <% for (const candidate of candidatesPerRolePerVote[role]) { %>
        <li class="table-row">
          <div class="col-1"> <%= role %> </div>
          <div class="col-2"> <%= candidate.name %> </div>
          <div class="col-3"><%= candidate.votes %></div>
        </li>
        <% } %>
        <% } %>
      </ul>
    </div>
    <br>
  </div>

</body>
</html>